{
    "scripts": {
        "dev": "concurrently \"npm:tailwind\" \"dotnet watch run --project SurviveTheForest\"",
        "tailwind": "tailwindcss -i ./SurviveTheForest/wwwroot/input.css -o ./SurviveTheForest/wwwroot/output.css --watch",
        "tailwind:build": "tailwindcss -i ./SurviveTheForest/wwwroot/input.css -o ./SurviveTheForest/wwwroot/output.css --minify",
        "build:dotnet": "dotnet publish SurviveTheForest/SurviveTheForest.csproj -c Release -o publish",
        "build": "npm run tailwind:build && npm run build:dotnet"
    },
    "devDependencies": {
        "concurrently": "^9.2.1",
        "tailwindcss": "^3.4.0"
    }
}